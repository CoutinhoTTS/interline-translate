{
  "name": "sidecar-translate",
  "displayName": "Sidecar Translate",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "browser": "./out/web-extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run build --minify",
    "build": "node scripts/build",
    "compile": "pnpm run build",
    "watch": "pnpm run build --watch",
    "pretest": "pnpm run build && pnpm run lint",
    "serve": "serve -C",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "@vue/reactivity": "^3.4.3",
    "axios": "^1.6.3",
    "esbuild": "^0.18.20",
    "eslint": "^8.56.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ofetch": "^1.3.3",
    "typescript": "^5.3.3",
    "vscode-oniguruma": "^1.7.0",
    "vscode-textmate": "^9.0.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "sidecar-translate.translateSelectedText",
        "title": "Translate Selected Text"
      },
      {
        "command": "sidecar-translate.startTranslatingDocuments",
        "title": "Start translating documents"
      },
      {
        "command": "sidecar-translate.stopTranslatingDocuments",
        "title": "Stop translating documents"
      },
      {
        "command": "sidecar-translate.displayOriginalText",
        "title": "Display original text"
      },
      {
        "command": "sidecar-translate.translateTheDocumentOnce",
        "title": "translate the document once"
      },
      {
        "command": "sidecar-translate.showTranslatePopmenu",
        "title": "Interline Translate"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sidecar Translate",
      "properties": {
        "sidecar-translate.defaultTargetLanguage": {
          "type": "string",
          "default": "zh-CN",
          "description": "Default target language to translate to."
        },
        "sidecar-translate.secondLanguage": {
          "type": "string",
          "default": "",
          "description": "Fallback language when the default language is not available."
        },
        "sidecar-translate.googleTranslateProxy": {
          "type": "string",
          "default": "",
          "description": "Google translate proxy to use for requests. Leave empty to use the official API Url."
        },
        "sidecar-translate.corsProxy": {
          "type": "string",
          "default": "",
          "description": "CORS proxy to use for requests. Leave empty to use the default proxy."
        }
      }
    }
  }
}
